# Production Environment Configuration
ENV=production
HOST=0.0.0.0
PORT=8000

# CORS Configuration for Azure Static Web Apps
CORS_ORIGINS=https://your-app-name.azurestaticapps.net,https://your-custom-domain.com

# Performance Settings for Azure App Service Free Tier
WORKERS=1
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Logging
LOG_LEVEL=INFO

# Dataset path for production
DATASET_PATH=/app/dataset

# Model settings
ENABLE_BERT4REC=true
ENABLE_HYBRID=true
DEFAULT_MODEL=bert4rec